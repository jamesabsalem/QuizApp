@page "/"
<PageTitle>Home</PageTitle>

<div class="container">
    <div class="row">
        @foreach (var quiz in QuizList)
        {
           <div class="d-grid col-lg-3 col-md-6">
                <div class="card border-light mb-3" style="max-width: 20rem;">
                    <div class="card-header">@quiz.QuizCode</div>
                    <div class="card-body">
                        <h4 class="card-title">@quiz.QuizTitle</h4>
                    </div>
                    <div class="d-flex justify-content-center mb-3">
                        <NavLink href="/CreateQuiz">
                            <button type="button" class="btn btn-warning">Start Quiz</button>
                        </NavLink>
                    </div>
                </div>
           </div>
        }
    </div>

</div>




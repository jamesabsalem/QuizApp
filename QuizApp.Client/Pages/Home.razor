@page "/"
<PageTitle>Home</PageTitle>

<AuthorizeView>
    <Authorized>
        <p>Welcome, @username!</p>
    </Authorized>
    <NotAuthorized>
        <p>Please log in to view your profile.</p>
    </NotAuthorized>
</AuthorizeView>
@if (QuizList != null)
{
    <div class="container">
        <div class="row">
            @foreach (var quiz in QuizList)
            {
                <QuizView Quiz="quiz"></QuizView>
            }
        </div>
    </div>
}



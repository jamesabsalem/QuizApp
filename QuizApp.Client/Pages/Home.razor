@page "/"
<PageTitle>Home</PageTitle>

<div class="container">
    <div class="row">
        @foreach (var quiz in QuizList)
        {
            <div class="d-grid col-lg-3 col-md-6">
                <div class="card border-light mb-3" style="max-width: 20rem;">
                    <div class="card-header">@quiz.QuizCode</div>
                    <div class="card-body">
                        <h4 class="card-title">@quiz.QuizTitle</h4>
                    </div>
                    <div class="d-flex justify-content-center mb-3">
                        <button type="button" class="btn btn-warning" @onclick="OnClickStartQuiz">Start Quiz</button>
                    </div>
                </div>
            </div>
        }
    </div>

</div>



<!--modal display-->
<div class="modal" style="display: @_modalDisplay;">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h5 class="modal-title w-100">Quiz</h5>
                <button type="button" class="btn-close" @onclick="OnClickClose"></button>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" @onclick="OnClickClose">Next</button>
            </div>
        </div>
    </div>
</div>



